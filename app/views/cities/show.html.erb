<!-- Content title -->
<h2 class="h1 text-center mb-4 text-uppercase">Liste des potins à <%= @city.name %></h2>

<!-- Main content -->
<div class="row">
  <% @gossips.each do |gossip| %>
    <div class="col-4 mb-3">
      <div class="card">
        <img class="card-img-top" alt="Card image cap" src="https://statics.lesinrocks.com/content/thumbs/uploads/2017/05/width-1125-height-612/twin-peaks-15.jpg">
        <div class="card-body">
          <h5 class="card-title"><%=gossip.title %></h5>
          <p class="card-text"><%= truncate gossip.content, length: 30 %></p>
          <p class="card-text">
            <small class="text-muted">
              Posté par <a href="<%= user_path(gossip.user.id) %>"><%=gossip.user.first_name %></a>
              le <%=gossip.created_at.strftime("%d/%m/%Y %H:%I") %>
              à <a href="<%= city_path(gossip.user.city.id) %>"><%=gossip.user.city.name %></a>
            </small>
          </p>
          <div class="row justify-content-center">
            <div class="col">
              <a href="<%= gossip_path(gossip.id) %>" class="btn btn-info btn-block">Voir le potin</a>
            </div>
            <div class="col">
              <%= form_tag gossip_path(gossip.id), method: "delete", style: "display: inline" do %>
                <%= submit_tag "Supprimer", {class: 'btn btn-danger btn-block'} %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
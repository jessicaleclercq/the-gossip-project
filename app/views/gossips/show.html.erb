<!doctype html>
<html lang="en">

  <body>

    <div class="container">
      <h1 class="display-4 text-center my-3">The Gossip Project</h1>

      <div class="row justify-content-center">
          <div class="col-6">
            <div class="card">
              <img class="card-img-top" alt="Card image cap" src="https://hiro.pl/wp-content/uploads/2017/05/twin.jpg">
              <div class="card-body">
                <h5 class="card-title"><%=@gossip.title %></h5>
                <p class="card-text"><%= @gossip.content %></p>
                <p class="card-text">
                <p class="card-text">
                  <small class="text-muted">
                    posté par <a href="<%= user_path(@gossip.user.id) %>"><%=@gossip.user.first_name %></a>
                    le <%=@gossip.created_at.strftime("%d/%m/%Y à %H:%I") %>
                  </small>
                </p>
              </div>
            </div>
          </div>
      </div>
</div>

  </body>

</html> 
